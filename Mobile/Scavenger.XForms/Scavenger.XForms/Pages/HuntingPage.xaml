<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scavenger.XForms.Pages.HuntingPage">
  <ContentPage.Content>
    <ContentView>
      <StackLayout Spacing="0">
        <Label Text="{Binding BearingString}" FontSize="40" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding CompassString}" FontSize="40" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding CurrentPointString}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding HomeLocationString}" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>
    </ContentView>
  </ContentPage.Content>
</ContentPage>